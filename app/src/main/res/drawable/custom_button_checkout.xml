<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#ffffff"/>
            <corners android:radius="80dip" />
            <stroke android:color="#ffffff" android:width="2dp"></stroke>
            <gradient android:angle="-90" android:endColor="#e12c03" android:startColor="#8eff5e61" />

        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#ffffff"/>
            <corners android:radius="80dip" />
            <stroke android:width="2dip" android:color="#fff" />
            <solid android:color="#fff" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ffffff"/>
            <corners android:radius="80dip" />
