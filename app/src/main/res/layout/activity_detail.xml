<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_image_detail"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/agv_k5" />

    <TextView
        android:id="@+id/tv_name_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AGV K3"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tv_price_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="200.000 vnd"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="25sp" />
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_minus_detail"
            android:src="@drawable/minus"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:id="@+id/tv_count_detail"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textColor="#000000"
            android:textSize="30sp"
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_plus_detail"
            android:src="@drawable/plus"
            android:layout_width="20dp"
            android:layout_height="30dp" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_add_to_cart_detail"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textAlignment="center"
        android:background="@drawable/custom_button_checkout"
        android:textColor="#515151"
        android:text="Them vao gio hang"
        android:layout_width="250dp"
        android:layout_height="40dp" />
</LinearLayout>
