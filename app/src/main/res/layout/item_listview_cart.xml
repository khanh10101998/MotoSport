    <com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <!--view hide-->
        <LinearLayout
            android:id="@+id/bottom_wrapper"
            android:layout_width="50dp"
            android:layout_height="105dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ff3131"
                android:padding="10dp"
                android:src="@drawable/add_card_white1" />
        </LinearLayout>

        <!-- view chinh -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#ffffff"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_product"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/agv_k5" />

            <LinearLayout
                android:layout_width="230dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"

                    >

                    <TextView
                        android:id="@+id/tv_product_name_cart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="agv"
                        android:textColor="#686868"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="So Luong: "
                            android:textColor="#686868"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tv_product_count_cart"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:textColor="#686868"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_product_price_cart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="200.000d"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!--<ImageView-->

                <!--android:src="@drawable/add_card_white1"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_weight="1"-->
                <!--android:background="#ff3131"-->
                <!--android:text="add to card"-->
                <!--android:textColor="#ffffff" />-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_plus_cart"
                    android:layout_width="20dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/plus" />

                <ImageView
                    android:id="@+id/iv_minus_cart"
                    android:layout_width="20dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/minus" />
            </LinearLayout>
        </LinearLayout>

    </com.daimajia.swipe.SwipeLayout>
